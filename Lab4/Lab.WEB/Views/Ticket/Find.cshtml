@model Models.TicketModel

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
    Ticket
    </h1>
</section>
<!-- Main content -->
<section class="content container-fluid">
    <!-- Horizontal Form -->
    <div class="box box-info">
    <div class="box-header with-border">
        <h3 class="box-title">Find Ticket</h3>
    </div>
    <!-- /.box-header -->
    <!-- form start -->
    <form class="form-horizontal" method="post" action="GetTicketById">
        <div class="box-body">
        <div class="form-group">
            <label for="inputEmail3" class="col-sm-2 control-label">Id</label>
            <div class="col-sm-10">
            <input type="number" id="txtId" class="form-control" name="Id" placeholder="Id" value="@Model.Id">
            <button id="b1"
            onclick="location.href='@Url.Action("GetTicketByPerformanceId", "Ticket")?id=' + $('#txtId').val()">Find By Id</button>
            </div>
        </div>
        <div class="form-group">
            <label for="inputEmail3" class="col-sm-2 control-label">IsBooked</label>
            <div class="col-sm-10">
            <input type="checkbox" id="txtbId" class="check-box" name="IsBooked" placeholder="IsBooked" value="@Model.IsBooked">
           <button id="b3"
            onclick="location.href='@Url.Action("GetTicketByPerformanceId", "Ticket")?isBooked=' + $('#txtbId').is(":checked")">Find By booked</button>
          
            </div>
        </div>
        <div class="form-group">
            <label for="inputPassword3" class="col-sm-2 control-label">IsSold</label>
            <div class="col-sm-10">
            <input type="checkbox" id="txtsid" class="check-box" name="IsSold" placeholder="IsSold" value="@Model.IsSold">
            <button id="b3"
            onclick="location.href='@Url.Action("GetTicketByPerformanceId", "Ticket")?isSold=' + $('#txtsid').is(":checked")">Find By sold</button>
          
            </div>
        </div>
        <div class="form-group">
            <label for="inputEmail3" class="col-sm-2 control-label">PerformanceId</label>
            <div class="col-sm-10">
            <input type="number" id="txtpId"  class="form-control" name="PerformanceId" placeholder="PerformanceId" value="@Model.PerformanceId">
            <button id="b2"
            onclick="location.href='@Url.RouteUrl(new { controller = "Ticket", action = "GetTicketByPerformanceId" })?performanceId=' + $('#txtpId').val()">Find By Performance Id</button>
        </div>
        <div class="form-group">
            <label for="inputEmail3" class="col-sm-2 control-label">Price</label>
            <div class="col-sm-10">
            <input type="number" class="form-control" name="Price" placeholder="Price" value="@Model.Price">
            </div>
        </div>
        </div>
       
    </form>
    </div>
    <!-- /.box -->
</section>
<script>
function OnChange(this) {
    alert(this.value);
    @Model.Id = this.value;
}
</script>