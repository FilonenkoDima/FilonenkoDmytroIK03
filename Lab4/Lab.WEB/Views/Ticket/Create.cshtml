<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
    Ticket
    </h1>
</section>
<!-- Main content -->
<section class="content container-fluid">
    <!-- Horizontal Form -->
    <div class="box box-info">
    <div class="box-header with-border">
        <h3 class="box-title">Add Ticket</h3>
    </div>
    <!-- /.box-header -->
    <!-- form start -->
    <form class="form-horizontal" method="post" action="AddTicket">
        <div class="box-body">
        <div class="form-group">
            <label for="inputEmail3" class="col-sm-2 control-label">Id</label>
            <div class="col-sm-10">
            <input type="number" class="form-control" name="Id" placeholder="Id">
            </div>
        </div>
        <div class="form-group">
            <label for="inputEmail3" class="col-sm-2 control-label">IsBooked</label>
            <div class="col-sm-10">
            <input type="checkbox" class="check-box" name="IsBooked" placeholder="IsBooked">
            </div>
        </div>
        <div class="form-group">
            <label for="inputPassword3" class="col-sm-2 control-label">IsSold</label>
            <div class="col-sm-10">
            <input type="checkbox" class="check-box" name="IsSold" placeholder="IsSold">
            </div>
        </div>
        <div class="form-group">
            <label for="inputEmail3" class="col-sm-2 control-label">PerformanceId</label>
            <div class="col-sm-10">
            <input type="number" class="form-control" name="PerformanceId" placeholder="PerformanceId">
            </div>
        </div>
        <div class="form-group">
            <label for="inputEmail3" class="col-sm-2 control-label">Price</label>
            <div class="col-sm-10">
            <input type="number" class="form-control" name="Price" placeholder="Price">
            </div>
        </div>
        </div>
        <!-- /.box-body -->
        <div class="box-footer">
        <button type="submit" class="btn btn-default">Cancel</button>
        <button type="submit" class="btn btn-info pull-right">Create</button>
        </div>
        <!-- /.box-footer -->
    </form>
    </div>
    <!-- /.box -->
</section>